function ffnewals {
        echo -n "alias name? "
        read ALSIANAME
        echo -n "command for $ALSIANAME? "
        read ALSCOMM
       echo "alias $ALSIANAME=\"   $ALSCOMM\"
       " >> /home/faron/bin/core/data/bash/bash_aliases.list
        echo "alias added: $ALSIANAME"
        clear
        bashsr
}

function fflsals {
    GETLISTINGALS="$( cat ~/.bash_aliases | awk '{ print $2}' | sed 's/="/\ |\ /g' | tr '\n' ' ' )"
    echo "$GETLISTINGALS"
}

function ffalsdel {
    fflsals
    echo -n "which alias to remove? "
    read FINDALIASDEL
    if [ -z "$FINDALIASDEL" ]
        then
            echo "alias not found"
        else
            sed -i -e "/$FINDALIASDEL/d" /home/faron/bin/core/data/bash/bash_aliases.list
        fi
    clear
    bashsr
}