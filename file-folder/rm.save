#!/bin/bash
FILES="$1"
if [ -d "$FILES" ]
      then
	    cp -r -u $FILES /home/trashbin/
	    echo "$FILES" >> /home/trashbin/logging.log
            rm-orig -r $FILES
            echo "$FILES trashed"
      else
            cp -u $FILES /home/trashbin
	    echo "$FILES" >> /home/trashbin/logging.log
            rm-orig $FILES
            echo "$FILES trashed"
      fi
exit 0
