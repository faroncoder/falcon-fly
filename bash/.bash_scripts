if ! shopt -oq posix; then
	if [ -f /usr/share/bash-completion/bash_completion ]; then
		. /usr/share/bash-completion/bash_completion
	elif [ -f /etc/bash_completions ]; then
		. /etc/bash_completion
	fi
fi
	NODE_PATH=/usr/bin/node
	NEWPATH="$( getconf PATH ):/sbin:/usr/sbin:$HOME/.bin:$HOME/bin:/usr/local/bin:/usr/local/sbin:$JAVA_HOME/bin:$NODE_PATH"
	export PATH=$NEWPATH

	#AVA_HOME="/usr/local/jvm/jdk1.8.0_60"
	#RE_HOME="/usr/local/jvm/jre1.8.0_60"
	#CLEANBINS=$( echo $PATH )
	#CLEANUP=$( echo $CLEANBINS | tr ':' '\n' | sort | uniq | sort | tr '\n' ':' | sed 's/::/:/g' )
	#export PATH=$CLEANUP
	alias rm="trash-put"

case $- in
	*i*) ;;
	*) return;;
esac
	HISTCONTROL=ignoreboth
	shopt -s histappend
	HISTSIZE=10000000
	HISTFILESIZE=20000000
	shopt -s checkwinsize
	shopt -s globstar
	export PROMPT_COMMAND="history -a; history -c; history -r; $PROMPT_COMMAND"
	[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"
	if [ -x /usr/bin/dircolors ]; then
		test -r $HOME/.dircolors && eval "$(dircolors -b $HOME/.dircolors)" || eval "$(dircolors -b)"
		alias ls='ls --color=auto'
		alias grep='grep --color=auto'
		alias fgrep='fgrep --color=auto'
		alias egrep='egrep --color=auto'
	fi
	alias ll='ls -alF'
	alias la='ls -A'
	alias l='ls -CF'

	last_command=$? ##   Must come first!
	PS1=""
	if [[ "$last_command" == 0 ]]; then
			PS1+="$Green_SHELL$checkmark_SHELL"
		else
			PS1+="$Red_SHELL$fancyX_SHELL"
	fi
	if [[ "$EUID" == 0 ]]; then
		PS1+="$BRed_SHELL \\h $USER "
	else
		PS1+="$BBlue_SHELL \\h $BYellow_SHELL  $USER "
	fi
	PS1+="$IPurple_SHELL\\w $reset_SHELL $ "
	LS_COLORS='di=1;35'
	export LS_COLORS


######### FARONIZED-MENU FUNCTION

cd(){
	builtin cd "$@";
	RET="$?";
	if [ -a "$( echo $PWD | grep $HOME )" ]; then echo "Yes I am home"; fi
	ls;
	return $RET;
}

ssh-engine(){
	echo "Initializing SSH agent..."
	chmod 700 -R $HOME/.ssh;
	echo "privizating $HOME/.ssh : done";
	if [ -f "$HOME/.ssh/authorized_keys" ]; then
		chmod 600 ~/.ssh/authorized_keys
	fi
	ssh-agent;
	eval $( ssh-agent -s ) > $HOME/.ssh/environment;
	find -L $HOME/.ssh -type f -name 'id_*' ! -name '*.pub' -exec ssh-add {} \;
}

startedSSH(){
	PIDOFCHECK=$( pidof ssh-agent | wc -w )
	if [[ "$PIDOFCHECK" -gt 2 ]]; then
		sudo kill -15 `pidof ssh-agent`
		ssh-engine
	else
		if [ -z $PIDOFCHECK ]; then
			ssh-engine
		fi
	fi
}



startedSSH

