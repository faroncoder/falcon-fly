if [[ "$EUID" == 0 ]] ;
	then
		echo "Root environment - no SSH agent"
		export PATH=$PATH:/home/local/bin
	else
		if [[ "$EUID" == 1004 ]] ;
			then

			loadEnvironment
			SSH_ENV=$HOME/.ssh/environment
			# start the ssh-agent
			function start_agent {
			    echo "Initializing new SSH agent..."
			    # spawn ssh-agent
			    /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "$SSH_ENV"
				echo "succeeded"
	    		chmod 600 "$SSH_ENV"
				. "$SSH_ENV" > /dev/null
				/usr/bin/ssh-add /home/faron/.ssh/id_rsa
				/usr/bin/ssh-add /home/faron/.ssh/id_git_access			

find /home/faron/.ssh -type f -name 'id_*' -exec /usr/bin/ssh-add {} \;
				}

			if [ -f "$SSH_ENV" ]; then
				. "$SSH_ENV" > /dev/null
				ps -ef | grep $SSH_AGENT_PID | grep ssh-agent$ > /dev/null ||
			        start_agent;
			else
				start_agent;
			fi
		fi
fi


