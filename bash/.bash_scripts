ssh-check() {
	ff.cpu.kill ssh-agent
	ssh-engine
}

ssh-engine() {
	echo "Initializing SSH agent..."
	chmod -R 0700 ~/.ssh
	echo "privizating ~/.ssh : done"
	ssh-agent; eval $( ssh-agent -s );
	eval $( ssh-agent -s )
	find ~/.ssh -type f -name 'id_*' ! -name '*.pub' -exec /usr/bin/ssh-add {} \;
}

loadScripts() {
	if [ ! "$( shopt -oq posix )" ]; then
		#if ! shopt -oq posix; then
		if [ -f /usr/share/bash-completion/bash_completion ]; then
			. /usr/share/bash-completion/bash_completion
		elif [ -f /etec/bash_completions ]; then
			. /etc/bash_completion
		fi
	. ~/.bash_aliases
	. ~/.bash_colors
	. ~/.bash_todo
	alias rm="trash-put"
	fi
	ssh-check	
#fi


}

