ssh-engine() {
	echo "Initializing SSH agent..."
	chmod -R 0700 ~/.ssh
	echo "privizating ~/.ssh : done"
	ssh-agent; eval $( ssh-agent -s );
	eval $( ssh-agent -s )
	find ~/.ssh -type f -name 'id_*' ! -name '*.pub' -exec /usr/bin/ssh-add {} \;
}

ssh-check() {
	ff.pidof.check ssh-agent
	ssh-engine
}

ssh-check