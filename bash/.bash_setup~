#!/bin/bash
#################################################
####  execute this in command line: ###################
####  source /home/faron/.falcon/scripts/bash/bash_setup #
export PATH=$PATH:/bin:/usr/bin:$HOME/.bin
	cd ~/ > 2> /dev/null
	find /home/fly/scripts/bash -maxdepth 1 -type f -name '.*' ! -name '*.pub' -exec ln -s {} \; 2> /dev/null
	ln -s /home/fly ~/.falcon
	ln -s /home/fly/.bin ~/.bin
	ln -s /tmp ~/tmp
	LOADBINS=( $HOME/.ssh/*  )
#	for asdf in "${LOADBINS[@]}"; do
#			mkdir -p "/home/faron/$asdf" 2> /dev/null
#			echo "$asdf created $( date )" 2> /dev/null
#	done
	touch "~/.falcon/archives/$( `hostname --short` )_$USER_bash_history"; rm ~/.bash_history && ln -s "~/.falcon/archives/$( `hostname --short` )_$USER_bash_history" "~/.bash_history"
	cp -r /home/fly/.ssh ~/
#	ssh-keygen -t rsa
	ssh-check

	cd ~/ > 2> /dev/null
	source ~/.profile


