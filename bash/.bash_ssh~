#!/bin/bash
export PATH=$PATH:$HOME/.bin

ssh-engine() {
	echo "Initializing SSH agent..."
	chmod -R 0700 $HOME/.ssh
	echo "privizating $HOME/.ssh : done"
	ssh-agent -s
	eval $( ssh-agent -s );
	find ~/.ssh -type f -name 'id_*' ! -name '*.pub' -exec ssh-add {} \;
}

ssh-check() {
	ff.cpu.pidof ssh-agent
	GETRESULT=$( `ff.cpu.pidof ssh-agent | cut -d":" -f2` )
	echo -e $GETRESULT
}

